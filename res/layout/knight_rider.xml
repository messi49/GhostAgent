<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/air"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/vision" />

            <ImageButton
                android:id="@+id/oil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/voice" />

            <ImageButton
                android:id="@+id/p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/p1b" />

            <ImageButton
                android:id="@+id/p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/p2b" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="horizontal" >

                <com.design.DrawLeftView
                    android:id="@+id/leftView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"/>

                <com.design.DrawCenterView
                    android:id="@+id/centerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"/>

                <com.design.DrawRightView
                    android:id="@+id/rightView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/autoCruise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/autocruiseb" />

            <ImageButton
                android:id="@+id/normalCruise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/normalcruiseb" />

            <ImageButton
                android:id="@+id/pursuit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/pursuitb" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/s1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/s1b" />

            <ImageButton
                android:id="@+id/s2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/s2b" />

            <ImageButton
                android:id="@+id/p3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/p3b" />

            <ImageButton
                android:id="@+id/p4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/p4b" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>